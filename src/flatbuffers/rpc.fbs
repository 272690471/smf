namespace smurf.rpc;

table GetRequest{
  name:string;
}
table GetResponse{
  name:string;
}
table PostRequest{
  name:string;
  body:[byte];
}
table PostResponse{
  name:string;
}

union RPCRequest {
  GetRequest, PostRequest
}

union RPCResponse {
  GetResponse, PostResponse
}

table Header {
  name: string;
  value: string;
}

table RPC {
  version: uint = 0;
  status: uint = 200;
  headers: [Header];
  request: RPCRequest;
  response: RPCResponse;
}

root_type RPC;
